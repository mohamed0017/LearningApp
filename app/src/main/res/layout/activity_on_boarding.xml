<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
     android:background="@color/white"    >

    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="@dimen/d150"
        android:layout_height="@dimen/d150"
        android:src="@drawable/app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_but"
        android:layout_marginStart="@dimen/d30"
        android:layout_marginEnd="@dimen/d30"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/loginLogo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/s18"
        android:text="@string/have_account"/>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_but"
        android:layout_margin="@dimen/d30"
        app:layout_constraintTop_toBottomOf="@id/login"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/s18"
        android:text="@string/new_account"/>

</androidx.constraintlayout.widget.ConstraintLayout>
